<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/path"
            android:layout_width="4dp"
            android:layout_height="32dp"

            android:background="#D6D6D6"
            app:layout_constraintEnd_toEndOf="@+id/step"

            app:layout_constraintStart_toStartOf="@+id/step"
            app:layout_constraintTop_toBottomOf="@+id/step"></TextView>

        <TextView
            android:id="@+id/path2"
            android:layout_width="16dp"
            android:layout_height="2dp"

            android:background="#D6D6D6"
            app:layout_constraintBottom_toTopOf="@+id/path"
            app:layout_constraintStart_toEndOf="@+id/step"
            app:layout_constraintTop_toTopOf="@+id/step"></TextView>
        <TextView

            android:id="@+id/step"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/uncompleted_step"
            android:gravity="center"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView

            android:id="@+id/steptextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="status"

            app:layout_constraintBottom_toBottomOf="@+id/step"
            app:layout_constraintStart_toEndOf="@+id/path2"
            app:layout_constraintTop_toTopOf="@+id/step"></TextView>

        <TextView

            android:id="@+id/steptextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="date"
            app:layout_constraintStart_toStartOf="@+id/steptextStatus"
            app:layout_constraintTop_toBottomOf="@+id/steptextStatus"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>