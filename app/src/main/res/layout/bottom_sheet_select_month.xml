<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:behavior_hideable="true"
        android:clickable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:focusable="true">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_marginTop="2dp"
                android:layout_height="2dp"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>
            <TextView
                android:id="@+id/billboard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/poppinsregular"
                android:text="BillboardName"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:background="@drawable/select_background"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/billboard_name"
                app:layout_constraintTop_toBottomOf="@+id/billboard_name"
                android:gravity="center"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@drawable/info_alt_svgrepo_com"
                    android:layout_height="wrap_content">

                </ImageView>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:text="Description"
                    ></TextView>
            </LinearLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bottom_sheet_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Select month"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <TextView

                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="1"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/available_month_background"
                        android:gravity="center"
                        android:text="2"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/selected_month_background"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="3"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="4"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="5"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="6"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="7"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="8"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="9"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="10"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="11"></TextView>
                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="12"></TextView>
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/gridLayout"
                    app:layout_constraintStart_toStartOf="@+id/gridLayout"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated price:"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gridLayout"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/background_blue"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/white"
                        android:text="Order"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"></TextView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>