<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="32dp"
        app:behavior_hideable="true"
        android:clickable="true"
        android:background="@drawable/bottom_sheet_background"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:focusable="true">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bottom_sheet_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_marginTop="4dp"
                android:layout_height="2dp"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/left_svgrepo_com"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/billboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:text="@string/billboard_id"
                android:layout_marginLeft="16dp"


                app:layout_constraintBottom_toBottomOf="@+id/back"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="@+id/back" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billboard">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Select months"
                    android:textSize="32dp"

                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="4"
                    android:rowCount="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <TextView
                        android:id="@+id/month1"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="1"></TextView>

                    <TextView
                        android:id="@+id/month2"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="2"></TextView>

                    <TextView
                        android:id="@+id/month3"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="3"></TextView>c

                    <TextView
                        android:id="@+id/month4"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="4"></TextView>

                    <TextView
                        android:id="@+id/month5"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="5"></TextView>

                    <TextView
                        android:id="@+id/month6"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="6"></TextView>

                    <TextView
                        android:id="@+id/month7"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="7"></TextView>

                    <TextView
                        android:id="@+id/month8"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="8"></TextView>

                    <TextView
                        android:id="@+id/month9"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="9"></TextView>

                    <TextView
                        android:id="@+id/month10"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="10"></TextView>

                    <TextView
                        android:id="@+id/month11"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="11"></TextView>

                    <TextView
                        android:id="@+id/month12"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_not_available"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="12"></TextView>
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/gridLayout"
                    app:layout_constraintStart_toStartOf="@+id/gridLayout"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="end"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/billboard_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:textStyle="bold"
        android:text="@string/billboard_order_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:text="Estimated price:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
                    <Button
                        android:id="@+id/order"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="16dp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_button"

                        android:gravity="center"

                        android:text="Continue"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"></Button>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>