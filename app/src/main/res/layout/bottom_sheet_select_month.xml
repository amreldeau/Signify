<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        app:behavior_hideable="true"
        android:clickable="true"
        android:background="@drawable/bottom_sheet_background"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:focusable="true">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bottom_sheet_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_marginTop="4dp"
                android:layout_height="2dp"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/left_svgrepo_com"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/billboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Billboard"

                android:textSize="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/location_svgrepo_com"
                app:layout_constraintStart_toStartOf="@+id/billboard"
                app:layout_constraintTop_toBottomOf="@+id/billboard">

            </ImageView>

            <TextView
                android:id="@+id/billboard_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="location"

                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/billboard"></TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_sheet_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billboard_location">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Select months"

                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="4"
                    android:rowCount="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <TextView

                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="1"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/available_month_background"
                        android:gravity="center"
                        android:text="2"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/selected_month_background"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="4"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="5"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="6"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="7"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="8"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="9"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="10"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="11"></TextView>

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="12"></TextView>
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/gridLayout"
                    app:layout_constraintStart_toStartOf="@+id/gridLayout"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated price:"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gridLayout"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/background_blue"
                        android:fontFamily="@font/poppinsbold"
                        android:gravity="center"
                        android:text="Order"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"></TextView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>